 <!--提现详情-->

 <view class="wages_middle">

     <view class="jx_asset">

         <text class="asset_money">提现金额（元）</text>

         <!--金额显示-->
         <text class="money_number">{{wages}}</text>


     </view>


     <view class="weui-panel">


         <view class="step">
             <view class="weui-loadmore">
                 <view class="weui-loadmore__tips">1</view>
             </view>
             <text class="status">支付成功</text>
         </view>


         <view class="step">
             <view class="weui-loadmore">
                 <view class="weui-loadmore__tips">2</view>
             </view>
             <text class="status">银行处理中</text>
         </view>


         <view class="step">
             <view class="weui-loadmore choose">
                 <view class="weui-loadmore__tips choose_text">3</view>
             </view>
             <text class="status">到账成功</text>
         </view>


     </view>

     <view class="wages_middle">

         <!--明细-->
         <view class="cash_step" wx:for="{{balanceList}}">

             <view class="weui-media-box weui-media-box_text">

                 <view class="weui_title">
                     <view class="weui-media-box__title weui-media-box__title_in-text">{{item.operation}}</view>
                     <view class="weui_confirm">{{item.detail}}</view>
                 </view>

             </view>

         </view>


     </view>

     <view class="wages_middle">

         <!--明细-->

      <view class="cash_step" wx:for="{{balanceList1}}">

             <view class="weui-media-box weui-media-box_text">

                 <view class="weui_title">
                     <view class="weui-media-box__title weui-media-box__title_in-text">{{item.operation}}</view>
                     <view class="weui_confirm">{{item.detail}}</view>
                 </view>

             </view>

         </view>
            <hr/>
      </view>

     <text class="payroll_prompt" >联系客服</text>

 </view>


