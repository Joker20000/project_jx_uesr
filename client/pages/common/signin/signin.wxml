<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">

    <view class="weui-media-box__hd ">
        <image src="../../../static/icon/wages/jx_logo_orange.png" class="jx_cash"/>
    </view>


    <view class="weui-cells weui-cells_after-title resign_list">
        <view class="weui-cell weui-cell_input">

            <view class="jx_record">
                <image src="../../../static/icon/wages/jx_phone.png"  class="reset_go" />
            </view>

            <view class="weui-cell__bd">
                <input class="weui-input" value="{{mobile}}" type="number" bindinput="telFn" placeholder="请输入您的手机号" maxlength="11"/>
            </view>

        </view>

    </view>


    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">

            <view class="jx_record">
                <image src="../../../static/icon/wages/jx_password.png"  class="reset_go" />
            </view>


            <view class="weui-cell__bd">
                <input class="weui-input" password='true' value="{{password}}" bindinput="passwordFn" placeholder="请输入密码"  maxlength="20"/>
            </view>
        </view>

    </view>



    <!-- 如果只是展示用户头像昵称，可以使用 <open-data /> 组件 -->
<!--
    <open-data type="userAvatarUrl"></open-data>
    <open-data type="userNickName"></open-data>
-->

    <view class="page__bd page__bd_spacing">
        <button class="weui-btn" type="primary" bindtap="signin">登录</button>
        <!--<view wx:else>请升级微信版本</view>-->
    </view>

    <view class="weui-help">

        <navigator  url="../forget_password/forget_password" class="weui-media-box__title">忘记密码？</navigator>

        <navigator  url="../register/register"  class="weui-media-box__title">免费注册</navigator>

    </view>


</view>