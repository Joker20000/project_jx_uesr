<!--工资-->


<view class="jx_asset" >

    <navigator url="../../user/balance/balance" class="asset_money">总资产（元）</navigator>

    <view wx:if="{{lookWages}}">

        <!--金额显示-->
        <navigator url="../../user/balance/balance" class="money_number">{{wages}}</navigator>

        <view class="see_number" bindtap="lookWagesFn"><image src="../../../static/icon/wages/jx_open.png" class="jx_open"/></view>
    </view>

    <view wx:else>
    <!--金额隐藏-->
    <text class="money_number">******</text>
        <view class="see_number" bindtap="lookWagesFn"><image src="../../../static/icon/wages/jx_close.png"  class="jx_open" /></view>

    </view>


</view>


    <!--下拉选择-->
    <view hidden="{{hasCompany}}" class="phone_one" bindtap="clickSalary">
        <view class="phone_personal"><span>{{firstOptions}}</span><image src="../../../static/icon/wages/go.png" class="personal_image {{selectArea ? 'rotateRight' :''}}"/></view>

    </view>

    <view class="person_box">
        <view class="phone_select" hidden="{{selectSalary}}">
            <view class="select_one" bindtap="mySelectAll">全部</view>
            <view wx:for='{{selectSalaryOptions}}' class="select_one" data-id="{{item.entId}}" data-salary="{{item.entName}}" bindtap="mySelect">{{item.entName}}</view>
        </view>
    </view>

    <view  wx:if='{{dataText==false}}' class="asset_money">还未收到工资哦~</view>

    <view  wx:else class="wages_middle">

    <!--工资列表-->
    <view class="wages_form">


        <block wx:for="{{wagesList}}">
            <view class="weui-panel" bindtap="clickSeeList" data-detail="{{item.salaryDetailId}}">

                <view class="weui-panel__bd">

                    <view class="weui-media-box weui-media-box_text">

                        <view class="weui_title">
                            <view class="weui-media-box__title weui-media-box__title_in-text">{{item.salaryMonth}}工资
                            </view>
                            <view class="weui_confirm orange">{{item.state}}</view>

                        </view>

                        <view class="weui-media-box__desc">发薪企业：{{item.entName}}</view>

                        <view class="weui-media-box__info">
                            <view class="weui-media-box__info__meta">实发工资：{{item.realAmount}}元</view>
                        </view>

                    </view>
                </view>
            </view>
        </block>

        <view class="weui-loadmore weui-loadmore_line" hidden="{{noData}}">
            <view class="weui-loadmore__tips weui-loadmore__tips_in-line">{{moreText}}</view>
        </view>

        <view class="weui-loadmore" hidden="{{!noData}}">
            <view class="weui-loading"></view>
            <view class="weui-loadmore__tips">正在加载</view>
        </view>

