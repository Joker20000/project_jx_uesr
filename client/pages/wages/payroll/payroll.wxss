hr {

    display: block;
    background-color: #f3f3f3;
    transform: scaleY(0.5);
    height: .5px;
    width: 100%;
    text-align: center;
    margin: 0 auto;

}

.weui-media-box {
    padding: 0 15px;
    position: relative
}

.orange{
    color:#fe9728 ;
}

.add_line{

    position: relative;

}

.add_line:after{

    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    border-bottom: 1px solid #ddd;
    transform: scaleY(.6);


}