page{
    background-color: #f7f7f7;
}
  .weui-msg{
  padding-top: 0;

}

.weui-media-box__hd{
     margin: 0 auto;
     background: -webkit-linear-gradient(90deg,#fdaf3c,#ea5e26);
     position: relative;
     z-index: 50;
     width: 100%;
     height: 200px;
}

.jx_background{
    width: 100%;
    height: 25px;
}
.weui-circle{
    margin: 0 auto;
    position: absolute;
    top: 15%;
    left: 0;
    right: 0;
    z-index: -50;
}

.circle_bot{
    background-color:#fff;
    width: 126px;
    height: 126px;
    left: 50%;
    position: absolute;
    border-radius: 50%;
    opacity: .1;
    transform: translateX(-50%);
    top:0;
}

.circle_mid {
    background-color:#fff;
    opacity: .6;
    width: 100px;
    height: 100px;
    left: 50%;
    border-radius: 50%;
    transform: translateX(-50%);
    position: absolute;
    top: 13px;
}

.circle_top{
    background-color:#fff;
    width: 80px;
    height: 80px;
    left: 50%;
    border-radius: 50%;
    transform: translateX(-50%);
    top: 23px;
    position: absolute;
}

.jx_cash{
    width: 70px;
    height: 70px;
    z-index: 500;
    margin: 65px auto;


}

.weui-msg__title {

    font-size: 28px;
    color: #fe9728;
    padding-top: 15px;

}