


page{
    background-color: #f5f5f5;
}
.task_news .title {
    padding: 10px 15px;
    font-size: 16px;
    font-weight: 500;
    position: relative;
    line-height: 16px;
}
.task_news .title:before {
    content: '';
    height: 16px;
    width: 4px;
    position: absolute;
    bottom: 12px;
    left: 0;
    background-color: #fe7c4e;
    z-index: 2;
}
.task_news .title:after {
    content: '';
    height: 13px;
    width: 4px;
    position: absolute;
    bottom: 12px;
    left: 2px;
    background-color: #ffded3;
    z-index: 1;
}
.task_news .name_title {
    background-color: #fff;
    margin-bottom: 15px;
}
.task_news .name_title .content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
}
.task_news .name_title .content view:first-child {
    font-size: 18px;
    width: 85%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.task_news .name_title .content .color_text {
    color: #ff7a3c;
}
.task_news .task_details {
    background-color: #fff;
}
.task_news .list {
    padding: 5px 0;
}
.task_news .list_detail {
    padding: 15px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    position: relative;
}
.list_detail .picture {
    width: 50px;
    height: 50px;
    background-color: #5094f3;
    border-radius: 5px;
    margin-right: 10px;
}
.task_news .list_detail .picture image {
    width: 80%;
    height: 80%;
    margin: 5px auto;
    display: block;
}
.task_news .list_detail .details view:first-child {
    font-size: 16px;
}
.task_news .list_detail .details view + view {
    color: #ababab;
}
.task_news .list_detail:last-child:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 15px;
    width: 98%;
    border-bottom: none;
}
.task_news .list_detail:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 15px;
    width: 98%;
    border-bottom: 1px solid #e9e9e9;
    height: 1px;
    transform: scaley(0.6);
}
/*弹框*/
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 40%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 10rpx;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 16px;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding:20rpx 30rpx;
    color: #ababab;
    font-size: 14px;
    text-align: center;

}

.modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
    font-size: 28rpx;
}

.jx_code{
    width: 70%;
}

.input {
    width: 100%;
    height: 82rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 96rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 96rpx;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
    font-size: 16px;
}

.btn-confirm {
    width: 100%;
    color: #ec5300;
    text-align: center;
    font-size: 16px;
    line-height: 96rpx;
}
