<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">短信验证码</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" type="number" placeholder="请输入短信验证码" maxlength="6" value="{{code}}" bindinput="codeFn"/>
        </view>
    </view>

</view>

<view class="weui-cells__title">验证码已发送至{{mobile}},{{last_time}}s后可<span class="{{locked==1 ? '' :'locked'}}" bindtap="hasCodeFn">重新获取</span></view>

<view class="page__bd page__bd_spacing">

    <button class="weui-btn" type="primary"  bindtap="buttonCheck">确认</button>

</view>