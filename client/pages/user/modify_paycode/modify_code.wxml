<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">


    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">原密码</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" type='number' password="true" placeholder="请输入原密码" value="{{oldPassword}}" bindinput="oldPasswordFn" maxlength="6"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
            <view class="weui-cell__hd">
                <view class="weui-label">新密码</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" type='number' password="true" placeholder="6位数字支付密码" value="{{password}}" bindinput="passwordFn" maxlength="6"/>
            </view>

        </view>
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">确认密码</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" type='number' password="true" placeholder="请再次输入密码" value="{{confirmPassword}}" bindinput="confirmPasswordFn" maxlength="6"/>
            </view>
        </view>
    </view>


    <navigator class="weui-btn-area">
        <button class="weui-btn" type="primary" bindtap="modifyCode">确认</button>
    </navigator>




</view>