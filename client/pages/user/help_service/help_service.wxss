@import "../../wages/index/index.wxss";


page{

    background-color: #ebebeb;
    height:100%;
    width: 100%;
    font-size: 14px;
    color: #4a4a4a;

}



.weui-media-box__hd_in-appmsg {

    display: inline-flex;
    width: 60px;
    height: 60px;
    text-align: center;
    line-height: 10px;
}
.weui-media-box__hd{
    width: 25%;
}

.service_title{
display: block;
    width: 100%;
}

.help_service{
    background-color: #fff;
}

.jx_cash{
    width: 60rpx;
    height: 60rpx;
 padding-left: 15px;

}

.weui-help{
    width: 75%;
    line-height: 30px;
}

hr {
    display: block;
    transform: scaleY(0.4);
    width: 90%;
    border:.5px solid #dddddd;
}

/*底部tab*/


.tab_bottom{
    background-color: #fff;
    position:fixed;
    bottom:0;
    padding:10px 10px 15px 10px;
    box-sizing: border-box;
    display: flex;
    justify-content: space-around;
    width: 100%;
    color: #eb5e26;
}

.service_title{
    padding-left: 2px;
}

/*客服按钮*/
.kf_button{
    background-color: rgba(255, 255, 255, 0);
    border: 0;
    display: block;

}
button.kf_button {

    position:relative;
    display:block;
    margin-left:0;
    margin-right:0;
    padding-left:0;
    padding-right:0;
    box-sizing:border-box;
    font-size:14px;
    text-align:center;
    text-decoration:none;
    line-height:normal;
    border-radius:0;
    -webkit-tap-highlight-color:transparent;
    overflow:hidden;
    color:#eb5e26;
    background-color:transparent;

}
.kf_button::after{
    border: 0px;
}
.kf_image{
    z-index: 9999;
    width: 60rpx;
    height: 60rpx;
    padding-left: 0;
}

.online_service{
    line-height: normal;
}