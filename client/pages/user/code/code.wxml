<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">请输入验证码</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" type="number" placeholder="请输入验证码" value="{{code}}" bindchange="codeFn" maxlength="6"/>
        </view>
    </view>

</view>

<view class="weui-cells__title">验证码已发送至{{mobile}},{{last_time}}s后可重新获取</view>


<!--button-->
<view class="page__bd page__bd_spacing" style="margin-top: 25px" bindtap="codeUrlFn">

    <button class="weui-btn" type="primary">确认</button>

</view>

