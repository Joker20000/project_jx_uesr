@import "../mine/mine.wxss";
@import "../details/details.wxss";

.account_personal{
    margin: 5px auto;
    text-align: center;
    color: #4a4a4a;
    padding-top: 15px;
}

.personal_message{
    padding: 10px 0 0 0;
}

.personal_tel{
    color: #8a8a8a;
}

.reset_go{
    width: 68px;
    height: 68px;
}
.jx_record{
    padding-right: 0;
}

.weui-input{
    padding: 0;
    font-size: 14px;
}

.weui-media-box{
    padding: 0 15px;

}

.account_money{
    color: #4a4a4a;
}
hr{
    width: 100%;
}

.account_money{
    padding: 15px 0;
}


.weui-media-box__info {
    display: flex;
    align-items: center;
    vertical-align: middle;
    margin-top: 0;
}




.icon_canel{
    padding-left: 200px;
}

.cash_prompt{

    display: flex;
    vertical-align: middle;
}


label.cash_input{

    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-content: center;


}
.amount_box{
    padding-left: 0;
}

label.cash_input>.account_information_tel{

    width: 100%;
    font-size: 30px;
    color: #fe9728;
    overflow: auto;
    line-height: 30px;
    height: 2rem;

}



span.money_style{

    vertical-align: middle;
    color: #fe9728;
    display: inline-block;
    font-size: 24px;
    margin-top:30rpx;


}



.orange{
   color:  #fe9728;
    white-space: nowrap;
}

.inputClass{
    color: #ababab;
    font-size:20px;

}

.cash_btn >button[disabled][type=primary]{
    background: #e5e5e5;
    color: #8a8a8a;
}

.can_cash{

    padding-top: 10px;
    font-size: 14px;
    color: #8a8a8a;
}

.box_contain{

    display: flex;
    align-content: center;
    justify-content: space-between;
    font-size: 14px;
    padding-bottom: 10px;



}
.all_transfer{

    padding-top: 10px;
}

.tip_area{

    color: #ababab;
}

.weui_tip{

    background-color:#fff;
    border-radius:5px;
    width:94%;
    margin:15px auto;

}

.weui_tip .weui-input{

    padding:0 10px;

}


.buydes-dialog-container{
    width: 100%;
    height: 100%;
    justify-content: space-between;
    background-color:rgba(15, 15, 26, 0.5);
    position: fixed;
    z-index: 999;
    top: 0;
}

.buydes-dialog-container-top{
    flex-grow: 1;

}

.buydes-dialog-container-bottom{
    background:#fff;
    flex-grow:0;
    position:fixed;
    bottom:0;
    width:100%;
    left:0;

}

.buydes-dialog-container-bottom-item{
    padding:24rpx;
    display: flex;
    justify-content: center;
    border-bottom: 1rpx solid #eeeeee;
}
.actionsheet_content{
    font-size: 16px;
    margin-bottom: 30rpx;
}

.actionsheet_title{

    position: relative;
    font-size: 16px;
}

.actionsheet_title:after{

    content: '';
    position: absolute;
    bottom: 0;
    left: 15px;
    border-bottom: 1px solid #ddd;
    width: 92%;
    transform: scaleY(.6);
}
.actionsheet_cancel{
    position:absolute;
    font-size:28px;
    right:15px;
    top:0;
    color: #ababab;


}
.main_title ,.actionsheet_title{

    padding: 10px;
    text-align: center;
}
.text_big{

    font-size: 52rpx;

}
.list_content{

    padding: 10px 30rpx ;
    display: flex;
    align-items: center;
    justify-content: space-between;

}

.list_content>view:first-child{
    color: #8a8a8a;

}

.operation_btn{
    padding:0 15px 60rpx;

}

.operation_btn>.weui-btn{

    background: -webkit-linear-gradient(65deg,#ea5e26,#fe9728);
    font-size: 16px;
}





