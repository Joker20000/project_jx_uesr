@import "../mine/mine.wxss";
@import "../add_card/add_card.wxss";


/*提示*/


.phone{
    width: 26px;
    height: 26px;
    padding-top: 4px;
    z-index: 1000;
}

.jx_record{

    z-index: 800;
}

.weui-cells__title {
    padding: 0;
}

/*button*/

.cash_btn >button[disabled][type=primary]{
    background: #e5e5e5;
    color: #8a8a8a;
}

/*弹框*/


.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 10rpx;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 16px;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding:20rpx 30rpx;
    color: #ababab;
    font-size: 14px;
    text-align: center;

}

.modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
    font-size: 28rpx;
}


.input {
    width: 100%;
    height: 82rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
}
.modal-footer {
    display: flex;
    flex-direction: row;
    height: 96rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 96rpx;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
    font-size: 16px;
}

.btn-confirm {
    width: 50%;
    color: #ec5300;
    text-align: center;
    font-size: 16px;
    line-height: 96rpx;
}



button.btn-confirm::after{
    border: none;

}

.tips{

    padding: 15px 10px 25px;
    color: #ababab;
    font-size: 14px;

}

.transfer_bottom{

    margin-bottom: 0;
}
