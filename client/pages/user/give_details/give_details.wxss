@import "../../wages/index/index.wxss";
@import "../mine/mine.wxss";

page {
    background-color: #ebebeb;
    width: 100%;
    height: 100%;
    color: #4a4a4a;
}

.weui-panel {

    display: flex;
    justify-content: space-between;
    padding: 25px;
    margin-bottom: 15px;
}

.weui-loadmore__tips {
    text-align: center;
    color: #fff;
}

.title {
    width: 30%;
}

.step {

    position: relative;
}

.step > .weui-loadmore {
    border: 1px solid #E87B17;
    background-color: #E87B17;
    color: #fff;
    width: 22px;
    height: 22px;
    border-radius: 50%;
    margin: 5px auto;
}

.step > .status {
    color: #E87B17;
}

.step > .border {
    position:absolute;
    width:100px;
    top:25%;
    left:60%;
    border-bottom:1px solid #E87B17;


}

.step.selected ~ .step> .weui-loadmore {

    border: 1px solid #ddd;
    background-color: #ddd;
    width: 22px;
    height: 22px;
    border-radius: 50%;
    margin: 5px auto;

}


.step.selected ~ .step > .border {
    position: absolute;
    width:100px;
    top:25%;
    left:60%;
    border-bottom: 1px solid #ddd;

}


.cash_step {
    background-color: #fff;
}

.wages_middle {
    margin-bottom: 15px;
}

.weui-media-box {
    padding: 6px 15px 0 15px;
}

.prompt {
    color: #E87B17;
    margin: 0 auto;
    text-align: center;
}

.weui-confirm {
    font-size: 14px;

}

.payroll_prompt {
    color: #E87B17;
    font-size: 14px;
}

.wages_middle {
    margin: 5px auto;
    text-align: center;
}

.weui-btn-area.hide{

    display: none;
}

.weui-btn-area.hide{

    display: none;
}
.weui-btn-area.show_btn{

    display: block;
}