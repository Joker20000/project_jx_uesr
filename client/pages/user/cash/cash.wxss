@import "../mine/mine.wxss";
@import "../../common/signin/signin.wxss";
@import "../setting/setting.wxss";
@import "../details/details.wxss";
@import "../certification/certification.wxss";


hr{
    width: 92%;
}
.weui_left{
    display: flex;
    justify-content: space-between;
     width: 48%;
     margin-right: 36%;
    padding-top: 2px;
}

.title{
    color: #ababab;
    font-size: 16px;
    display: inline-block;
    vertical-align: middle;
}

.weui-panel{
    margin-bottom: 15px;
}

.weui-media-box__info {
    display: flex;
    color: #fe9728;
    font-size: 24px;
    padding: 20rpx 0 10rpx;
    vertical-align: middle;
}

.weui-media-box__desc{
    color: #8a8a8a;
    overflow:auto;
    -webkit-line-clamp:10;
    padding-top: 7px;
    padding-left: 10px;


}
.weui_title{
    font-size: 16px;
    vertical-align: middle;

}

.weui-media-box__title {
    color: #4a4a4a;
    font-size: 16px;
    display: flex;
    justify-content: flex-start;


}
image.ask{
    width: 18px;
    height: 18px;
    margin-left: 30rpx;
    vertical-align: top;
    margin-top: 2px;
}

.weui-prompt{
    position: relative;
    bottom: 0;
}

.icon_canel{
    padding-left: 200px;
}

.cash_prompt{

    display: flex;
    vertical-align: middle;
}

.cash_text{
    color: #4a4a4a;

}

label.cash_input{

    width: 100%;
   padding: 8px 0;
    display: flex;
    justify-content: flex-start;
    align-content: center;

}
.amount_box{
    padding-left: 0;
}

label.cash_input>.account_information_tel{

    width: 100%;
    font-size: 30px;
    color: #fe9728;
    overflow: auto;
    line-height: 30px;
    height: 2rem;

}



span.money_style{

    vertical-align: middle;
    color: #fe9728;
    display: inline-block;

}

.details_date{
    color: #bbb;
    font-size: 18px;
    letter-spacing: 1px;

}

.weui-help{
    width: 100%;
    text-align: center;
    padding-left: 0;
    padding-right: 0;
    font-size: 14px;
    padding-top: 10px;
}
.jx_left{
    color: #fe9728;
    text-align: right;
    padding: 0;
}

.jx_right{
    color: #fe9728;
   text-align: left;
}
.orange{
   color:  #fe9728;
}


.reset_icon{
    width: 16px;
    height: 16px;
}

span.line{
    padding-left: 10px;
    padding-right: 10px;
    color: #fe9728;
}

.font_small{

    color: #ababab;
    font-size: 14px;
}
