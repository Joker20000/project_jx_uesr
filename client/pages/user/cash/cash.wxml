<!--提现-->

<view class="cash_card">

    <!--银行卡-->
    <view class="weui-cells">





        <picker bindchange="bindPickerChange" value="" range="{{bankList}}" class="weui-media-box weui-media-box_text">


            <view class="bank_list" data-id="{{bankCardId}}">


                <view class="weui_title">

                       <view class="jx_record">

                          <image src="../../../static/icon/wages/bank.png"  class="reset_go" />
                       </view>

                      <view class="weui_left">
                          <view class="weui-media-box__title weui-media-box__title_in-text">{{bankName}}（储蓄卡）</view>
                      </view>

                     <view class="weui-cell__ft weui-cell__ft_in-access"></view>

                </view>


                    <text class="details_date">{{bankNo}}</text>


            </view>
        </picker>

        <hr/>

        <!--更多-->

        <navigator type="default" class="weui-cell weui-cell_access weui-cell_link" url="../add_card/add_card">
            <view class="weui-cell__bd">添加新卡</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
    </view>

    <!--输入金额-->
    <view url="../payroll/payroll" class="weui-cells">

        <view class="weui-panel__bd">

            <view class="weui-media-box ">

                <view class="weui-media-box__desc">单笔￥{{amountMin}} - ￥{{amountMax}}（手续费{{rate}}%）</view>

                <view class="weui-media-box__info">￥

                    <label class="cash_input">
                        <input class="account_information_tel" disabled="{{enter}}" bindinput="bindKeyInput" value="{{inputBalance}}" type="digit" placeholder="请输入金额"  placeholder-style="color:#bbb, font-size:14px"/>
                    </label>

                </view>


                <view class="weui_title">

                    <view class="weui-media-box__title weui-media-box__title_in-text">可提额度{{canCashBalance}}元</view>

                    <image src="../../../static/icon/wages/jx_ask.png" class="ask" bindtap="hasTipsFn"/>

                    <view bindtap="cashAllFn" class="weui_confirm orange">全部提现</view>

                </view>

            </view>
        </view>
    </view>

    <!--button-->
    <view class="page__bd page__bd_spacing">

        <button class="weui-btn" type="primary" bindtap="cashFn">确认提现</button>


    </view>

    <!--提示-->
    <view class="weui-help">

        <navigator  url=""  class="jx_left">联系客服</navigator>

        <span>|</span>

        <text class="jx_right"   bindtap="moreFn">更多</text>


    </view>


    <!--温馨提示-->
    <view class="weui-prompt weui-panel_access">

        <view class="weui-media-box weui-media-box_text">

            <view class="weui-media-box__title weui-media-box__title_in-text">温馨提示</view>

            <view class="cash_prompt">
                <view class="jx_record">
                    <image src="../../../static/icon/wages/jx_cash_prompt.png"  class="reset_icon" />
                </view>

                <view class="weui-media-box__desc">订单提交后工作日一般2小时内处理，如出款失败，则5个工作日内退款至原支付账户，具体以银行时间为准，正常退款时间内，建议咨询相关银行
                </view>
            </view>

            <view class="cash_prompt">
                <view class="jx_record">
                    <image src="../../../static/icon/wages/jx_cash_prompt.png"  class="reset_icon" />
                </view>

                <view class="weui-media-box__desc">限额说明：单卡单笔50,000.00元，当日100,000.00元，当月100,000.00元</view>
                <!--<view class="weui-media-box__desc">限额说明：单卡单笔{{amountMin}}元，当日{{dayMaxAmount}}元，当月{{monthMaxAmount}}元</view>-->
            </view>

        </view>

    </view>


</view>

